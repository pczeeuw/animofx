<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="editorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.pczeeuw.animofx8.controllers.EditorController">
   <children>
      <ImageView fx:id="imgView" layoutY="25.0" pickOnBounds="true" preserveRatio="true" />
      <MenuBar fx:id="menuBar" minWidth="-Infinity">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#saveImage" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#saveImageAs" text="Save Asâ€¦" />
                  <MenuItem mnemonicParsing="false" onAction="#revert" text="Revert" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="Over AnimoFx8" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Canvas fx:id="editCanvas" layoutY="25.0" onMouseClicked="#mouseClicked" onMouseEntered="#dragEntered" onMouseExited="#dragExited" onMousePressed="#mousePressed" onMouseReleased="#mouseReleased" />
   </children>
</Pane>
